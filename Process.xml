<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 	xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-4.0.xsd" default-init-method="init" default-destroy-method="destroy">
    
    <bean id="bird" class="com.spring1.Bird">
    <property name="eagle1" ref="eaglea"/>
    <property name="eagle2" ref="eagleb"/>
    </bean>
    
    <bean id="eaglea" class="com.spring1.Eagle">
    <property name="colour" value="green"/>
    </bean>
     <bean id="eagleb" class="com.spring1.Eagle">
    <property name="colour" value="red"/>
    </bean>
    
    <bean class="com.spring1.Processor"/>

</beans>
